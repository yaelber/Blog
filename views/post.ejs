<!DOCTYPE html>
<html>
<head>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
  <title>Post</title>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1><%= post.title %></h1>
        <ul class="tags">
          <% post.tags.forEach(function(tag){ %>
           <li><%= tag.title %></li>
          <% }) %>
        </ul>
        <a class="btn btn-s btn-default" href="/posts/<%= post.id %>/edit">Edit Post</a>
        <div>
          <%= post.body %>
        </div>
        <section>
          <h3>Comments (<%= post.comments.length %>)</h3>
          <% post.comments.forEach(function(comment) { %>
            <article class="comment">
              <hr>
              <div>By <%= comment.userId %></div>
              <div>
                <%= comment.content %>
              </div>
              <button onclick='deleteComment(<%= comment.id %>)'>Delete Comment</button>
            </article>
          <% }) %>
        </section>
      </div>
    </div>
  </div>
  <script type="text/javascript" src="public/javascripts/post.js"></script>
</body>
</html>
